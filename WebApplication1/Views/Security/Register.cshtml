@model WebApplication1.Models.RegisterFormModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <form action="#" method="post" class="col s12">
        @Html.AntiForgeryToken()
        <div class="input-field row s3">
            @Html.EditorFor(m => m.Email)
            <label for="first_name">Your Email Address</label>
            <span class="red-text">@Html.ValidationMessageFor(m => m.Email)</span>
        </div>

        <div class="input-field col s6">
            @Html.EditorFor(m => m.Password)
            <label for="first_name">Password</label>
            <span class="red-text">@Html.ValidationMessageFor(m => m.Password)</span>
        </div>
        <div class="input-field col s6">
            @Html.EditorFor(m => m.ConfirmPassword)
            <label for="textarea1">Confirm Password</label>
            <span class="red-text">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
        </div>
        <div class="input-field col s6">
            @Html.EditorFor(m => m.LastName)
            <label for="first_name">Last Name</label>
            <span class="red-text">@Html.ValidationMessageFor(m => m.LastName)</span>
        </div>
        <div class="input-field col s6">
            @Html.EditorFor(m => m.FirstName)
            <label for="first_name">First Name</label>
            <span class="red-text">@Html.ValidationMessageFor(m => m.FirstName)</span>
        </div>
        <div class="input-field col s6">
            @Html.EditorFor(m => m.BirthDate)
            <label for="first_name">Birth Date</label>
            <span class="red-text">@Html.ValidationMessageFor(m => m.BirthDate)</span>
        </div>
        <div class="row">
            <div class="input-field col s2">
                @Html.EditorFor(m => m.Number)
                <label for="first_name">Number</label>
                <span class="red-text">@Html.ValidationMessageFor(m => m.Number)</span>
            </div>
            <div class="input-field col s10">
                @Html.EditorFor(m => m.Street)
                <label for="first_name">Street</label>
                <span class="red-text">@Html.ValidationMessageFor(m => m.Street)</span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s5">
                @Html.EditorFor(m => m.ZipCode)
                <label for="first_name">Zip Code</label>
                <span class="red-text">@Html.ValidationMessageFor(m => m.ZipCode)</span>
            </div>
            <div class="input-field col s7">
                @Html.EditorFor(m => m.City)
                <label for="first_name">City</label>
                <span class="red-text">@Html.ValidationMessageFor(m => m.City)</span>
            </div>
        </div>
        <div class="row">
            <label>
                <input type="checkbox" name="CondAgreement" class="filled-in"/>
                <span> I agree to ToS.</span>
            </label>
        </div>
        

        <input type="submit" class="btn wave-effect teal" value="Envoyer" />
    </form>
</div>

